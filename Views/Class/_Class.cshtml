@using examination_system.Models
@model Class
<div class="pnl col-sm-3">
    @if (User.IsInRole("admin") || User.IsInRole("superadmin"))
    {
        <div id="@Model.Id" style="border-radius: 10px; background-color: #00000075; position: absolute; right: 10px; top: 0px; display: none;">
            <div onclick="dlt('@Model.Id')" class="pointer pnlpnl" style="color:red;height:22px"> x </div>
            <a href="/Class/Edit?Id=@Model.Id"></a>
            <div onclick="document.getElementById('@Model.Id').children[1].click()" class="pointer pnlpnl" style="height:22px"> Edit </div>
            <div onclick="deleteclass('@Model.Id')" class="pointer pnlpnl" style="height:22px"> Delete </div>
        </div>
        <img src="/Resources/Account/3verticaldots.svg" class="dots pointer" onclick="filldots('@Model.Id')" />
    }
    <svg class="Img" height="75" width="75">
        <defs>
            <linearGradient id="grad1" x1="0%" y1="0%" x2="100%" y2="0%">
                <stop offset="0%" style="stop-color: #685de7; stop-opacity: 1" />
                <stop offset="100%" style="stop-color: #007fa8; stop-opacity: 1" />
            </linearGradient>
        </defs>
        <text y="50%" textLength="75" lengthAdjust="spacingAndGlyphs" fill="url(#grad1)">@Model.Name</text>
    </svg>
    <div class="UserName">@Model.Name</div>
    <ol style="font-size:17px;">
        @if (User.IsInRole("admin") || User.IsInRole("superadmin"))
        {
            <li>
                @{try
                    {@Model.Students.Count()}
                catch
                {<span> 0</span>} }
            </li>
        }
        <li>
            @{try
                {@Model.Questions.Count()}
            catch
            {<span> 0</span>} }
        </li>
    </ol>
    <ol style="margin-bottom:87px">
        @if (User.IsInRole("admin") || User.IsInRole("superadmin"))
        {
            <li>Students</li>
        }
        <li>Questions</li>
    </ol>
</div>